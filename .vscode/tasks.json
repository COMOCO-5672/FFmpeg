{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "configure",
        "type": "shell",
        "command": "../configure",
        "args": ["--enable-debug"],
        "options": {
          "cwd": "${workspaceFolder}/build"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": []
      },
      {
        "label": "build",
        "type": "shell",
        "command": "make -j $(nproc)",
        "options": {
          "cwd": "${workspaceFolder}/build"
        },
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"]
      }
    ]
  }
  